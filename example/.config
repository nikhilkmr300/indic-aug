# Changing anything in this file followed by running `make` will cause preprocessing to be done again
# (which if the dataset is large can take some time).

[lang]
# Source language
SRC=en
# Target language
TGT=hi

[preproc]
# Batch size for preprocessing train file
BATCH_SIZE=1000

[vocab]
# Use -1 to use all words as vocab.
SRC_VOCAB_SIZE=20000
TGT_VOCAB_SIZE=20000

[dir]
# IMPORTANT: Don't change these unless you change the corresponding targets in data/Makefile.
RAW_DIR=data/raw
PREPROC_DIR=data/preprocessed
VOCAB_DIR=data/vocab